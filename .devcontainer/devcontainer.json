{
    "name": "IPCToolkit Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "settings": {
        // Terminal settings
        "terminal.integrated.shell.linux": "/bin/bash",

        // C++ Extension Settings
        "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
        "C_Cpp.default.intelliSenseMode": "gcc-x64",
        "C_Cpp.default.compilerPath": "/usr/local/bin/clang++",
        "C_Cpp.clang_format_path": "/usr/local/bin/clang-format",
        "C_Cpp.clang_format_style": "file", // Use .clang-format file in project

        // CMake Settings
        "cmake.configureOnOpen": true,
        "cmake.generator": "Ninja",
        "cmake.buildDirectory": "${workspaceFolder}/build",

        // Python Settings
        "python.pythonPath": "/usr/bin/python3",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",

        // Prettier Settings
        "prettier.requireConfig": true
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "xaver.clang-format",
        "ms-python.python",
        "ms-azuretools.vscode-docker",  // Docker extension
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "mhutchie.git-graph"
    ],
    "postCreateCommand": "pre-commit install",
    "remoteUser": "root",
    "mounts": [
        "source=${localWorkspaceFolder}/.ccache,target=/root/.ccache,type=bind,consistency=cached"
    ],
    "forwardPorts": [],
    "remoteEnv": {
        "CCACHE_DIR": "/root/.ccache",
        "CCACHE_MAXSIZE": "1G"
    },
    "features": {},
    "containerEnv": {},
    "workspaceFolder": "/root",
    "workspaceMount": "source=${localWorkspaceFolder},target=/root,type=bind,consistency=cached"
}
